<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/geolayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark">

        <TextView
            android:id="@+id/bienvenida"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bienvenido a PintiApp"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:layout_margin="@dimen/text_margin"
            android:layout_gravity="top|center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pulsa el botón rojo para obtener el hito más cercano a tu posición\n\nSe recomienda precargar los hitos antes de realizar la visita"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/white"
            android:layout_below="@id/bienvenida"
            android:textSize="14sp"
            android:layout_margin="@dimen/text_margin"
            android:layout_gravity="center" />

    </RelativeLayout>

    <com.github.jorgecastilloprz.FABProgressCircle
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        app:arcColor="@color/colorPrimaryDark"
        app:arcWidth="4dp"
        app:finalIcon="@drawable/ic_done">

        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_my_location_white_24dp"
            app:rippleColor="@color/colorPrimary"
            app:borderWidth="0dp"/>

    </com.github.jorgecastilloprz.FABProgressCircle>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|end"
        android:layout_marginBottom="100dp"
        android:layout_marginEnd="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:src="@drawable/ic_system_update_black_24dp"
        app:layout_anchor="@id/fab"
        app:layout_anchorGravity="top"
        app:backgroundTint="@color/white"/>

</android.support.design.widget.CoordinatorLayout>