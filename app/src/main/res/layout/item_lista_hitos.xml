<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <ImageView
        android:id="@+id/hito_foto"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_margin="16dp"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop"
        android:src="@drawable/img201205191603108139"
        android:transitionName="portada_hito"
        android:contentDescription="TODO" />

    <RelativeLayout
        android:id="@+id/caja_texto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hito_foto"
        android:paddingBottom="8dp">

        <TextView
            android:id="@+id/hito_numero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginLeft="32dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="0"
            style="@style/TextAppearance.AppCompat.Headline" />

        <TextView
            android:id="@+id/hito_titulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@id/hito_numero"
            android:layout_toEndOf="@id/hito_numero"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:text="Title"
            style="@style/TextAppearance.AppCompat.Subhead" />

        <TextView
            android:id="@+id/hito_subtitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/hito_numero"
            android:layout_toEndOf="@id/hito_numero"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/hito_titulo"
            android:text="Subtitle"
            android:alpha="0.57"
            style="@style/TextAppearance.AppCompat.Body1"/>

    </RelativeLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:alpha="0.38"
        android:background="#000"
        android:layout_below="@+id/caja_texto"/>

</RelativeLayout>